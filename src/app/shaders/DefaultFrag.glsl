precision highp float;



///////////////////////////////////////////////////////////////////////////////
//// INCLUDES
///////////////////////////////////////////////////////////////////////////////

#include "./includes/common.glsl";


///////////////////////////////////////////////////////////////////////////////
//// DECLARATIONS
///////////////////////////////////////////////////////////////////////////////

in vec3 vNormal;
in vec2 vUv;

out vec4 fragColor;



///////////////////////////////////////////////////////////////////////////////
//// MAIN
///////////////////////////////////////////////////////////////////////////////

void main() {
  float red = triwave(vUv.y * 10.0);
  float green = triwave((vUv.y + 0.15) * 10.0);
  float blue = triwave((vUv.y + 0.33) * 10.0);

  fragColor = vec4(red, green, blue, 1.0);
}